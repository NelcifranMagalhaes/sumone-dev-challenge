<%= notice %>
&nbsp;
<div class="container">
    <%= form_tag('/drinks') do %>
        <div class="form-group">
          <%= text_field_tag 'name',"Try a Martini.." ,class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= submit_tag "Search", class: 'btn btn-outline-primary btn-lg' %>
        </div>
    <% end %>
</div>
<div class="container">
    <%= form_tag('/drinks') do |f| %>
        <div class="form-group">
          <%= select_tag 'temperature',options_for_select([ 'hot', 'warm','ambient', 'cold','extra_cold']),class: 'form-control',prompt: "Best temperature.."%>
        </div>
        <div class="form-group">
          <%= select_tag 'alcohol_level',options_for_select(['Yes','No' ]),class: 'form-control',prompt: "Want to be drunked?.."%>
        </div>
        <div class="form-group">
          <%= select_tag 'sugar',options_for_select(['Yes','No' ]),class: 'form-control',prompt: 'Sugar?..'%>
        </div>
        <div class="form-group">
          <%= submit_tag "Search", class: 'btn btn-outline-primary btn-lg' %>
        </div>
    <% end %>
</div>

  <div class="text-center">
    <%= paginate @drinks%>
  </div>

<div class="container">
  <div class="row">
    <% @drinks.each do |drink| %>
      <section>
        <div class="container" align="center">
          <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
              <div class="p-5">
                <%= image_tag drink.image_url, class: 'img-fluid img-thumbnail drink-card__img' %>
              </div>
            </div>
            <div class="col-lg-6 order-lg-1">
              <div class="p-5">
                <h2 class="display-4"><%= drink.name %></h2>
                <p><%= drink.description %></p>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>
  <div class="text-center">
    <%= paginate @drinks%>
  </div>


